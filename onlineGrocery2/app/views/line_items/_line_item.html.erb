<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td id="line"><%= line_item.quantity %>&times;</td>
  <td id="line"><%= line_item.product.title %></td>
  <td class="item_price" ><%= number_to_currency(line_item.total_price) %></td>
  

  <td id="line"><%= button_to '+1', line_items_path(product_id: line_item.product), remote: true, :class=>"btn btn-default btn-xs" %></td>
  <td id="line"><%= button_to '-1', line_item, :method=> :delete, remote: true, :class=>"btn btn-default btn-xs" %></td>


</tr>
